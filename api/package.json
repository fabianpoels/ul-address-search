{
  "name": "api",
  "dependencies": {
    "@types/pino": "^7.0.5",
    "@ul-address-search/shared": "workspace:*",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "trie-search": "^2.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1",
    "@types/cors": "^2",
    "@types/express": "^5.0.6",
    "@types/node": "^22",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "yarn workspace @ul-address-search/shared build && nodemon --exec tsx server.ts",
    "dev:debug": "yarn workspace @ul-address-search/shared build && nodemon --exec tsx --inspect server.ts",
    "build": "yarn workspace @ul-address-search/shared build && tsc --build",
    "build:clean": "yarn workspace @ul-address-search/shared build:clean && rm -rf dist && tsc --build",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "node --import tsx --test tests/**/*.test.ts",
    "test:watch": "node --import tsx --watch --test tests/**/*.test.ts",
    "test:unit": "node --import tsx --test tests/unit/**/*.test.ts",
    "test:integration": "node --import tsx --test tests/integration/**/*.test.ts"
  }
}